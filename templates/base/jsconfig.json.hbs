{{#if dynamicImports}}
    {
        "compilerOptions": {
            "baseUrl": "src",
            "module": "nodenext",
            "moduleResolution": "nodenext",
            "paths": {
                "#utils/*": ["src/utils/*"],
                "#constants/*": ["src/constants/*"],
                "#routes/*": ["src/routes/*"],
                {{#if (includes features "mongoose")}}
                    "#models/*": ["src/models/*"],
                {{/if}}
            }
        },
        "include": ["src"]
    }
{{else}}
{}
{{/if}}